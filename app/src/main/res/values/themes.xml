<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NextLive" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottone_azzurro</item>
        <item name="colorPrimaryVariant">@color/link_azzurro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/link_azzurro</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorSecondary">@color/bottone_azzurro</item>
    </style>

    <style name="ViewPager_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/bottone_azzurro</item>
        <item name="colorPrimaryDark">@color/link_azzurro</item>
        <item name="colorAccent">@color/white</item>
        <item name="fontFamily">@font/baloo</item>

    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>