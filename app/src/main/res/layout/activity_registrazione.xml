<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegistrazioneActivity"
    android:background="@color/sfondo_grigio">


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/baloo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrazione"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/bottone_azzurro"
            android:focusableInTouchMode="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/insert_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/suddivisione_grigio"
                android:fontFamily="@font/baloo"
                android:hint="Nome"
                android:ems="10"
                android:inputType="text"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/bottone_azzurro"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/insert_cognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cognome"
                android:textColor="@color/white"
                android:backgroundTint="@color/suddivisione_grigio"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="@font/baloo"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/bottone_azzurro"
            android:focusableInTouchMode="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/insert_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/suddivisione_grigio"
                android:fontFamily="@font/baloo"
                android:hint="Nickname"
                android:ems="10"
                android:inputType="text"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/bottone_azzurro"
            android:focusableInTouchMode="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/insert_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColor="@color/white"
                android:backgroundTint="@color/suddivisione_grigio"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="@font/baloo"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/bottone_azzurro"
            android:focusableInTouchMode="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/insert_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:textColor="@color/white"
                android:hint="Password"
                android:backgroundTint="@color/suddivisione_grigio"
                android:ems="10"
                android:inputType="textPassword"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/bottone_azzurro"
            android:focusableInTouchMode="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/conferma_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:hint="Conferma Password"
                android:backgroundTint="@color/suddivisione_grigio"
                android:ems="10"
                android:inputType="textPassword"
                android:fontFamily="@font/baloo"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/radioGenere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:textColor="@color/bottone_azzurro"
                android:fontFamily="@font/baloo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Genere:"/>
            <RadioButton
                android:id="@+id/radioMaschio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maschio"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioFemmina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femmina"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

        </RadioGroup>

        <Button
            android:id="@+id/registra"
            android:layout_gravity="center"
            android:layout_width="175dp"
            android:layout_height="51dp"
            android:background="@drawable/button_style"
            android:text="Registrati"
            android:layout_margin="15dp"
            android:layout_alignParentRight="true"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>